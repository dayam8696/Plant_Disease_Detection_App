<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E8F5E9"
    android:padding="16dp"
    android:gravity="center">

    <!-- Title Text -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Identify Your Plant Disease"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1B5E20"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:letterSpacing="0.05"
        android:fontFamily="sans-serif-medium" />

    <!-- Subtitle Text -->
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload or click a leaf photo to detect plant diseases using our AI-based model."
        android:textSize="16sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="24dp"
        android:lineSpacingExtra="4dp"
        android:textAlignment="center"
        android:fontFamily="sans-serif" />

    <!-- Image Section inside CardView for better appearance -->
    <androidx.cardview.widget.CardView
        android:id="@+id/image_card"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/image_placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/dash"
        android:scaleType="centerCrop"
        android:contentDescription="Plant Image Placeholder" />
    </androidx.cardview.widget.CardView>

    <!-- Button -->
    <Button
        android:id="@+id/check_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:backgroundTint="#2E7D32"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:layout_marginTop="16dp"
        android:elevation="8dp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"

        app:cornerRadius="50dp" />

</LinearLayout>
